<ContentDialog
    x:Class="ClientApp.Views.NewListDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClientApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Create a new list"
    PrimaryButtonText="Create"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="Save"
    SecondaryButtonClick="Cancel">

    <StackPanel>
        <TextBox x:Name="ListName" PlaceholderText="List name" KeyDown="OnTextBoxKeyDown"/>
        <!--TODO: improve error styling-->
        <TextBlock x:Name="Error" Foreground="Red" Margin="0,5,0,0"></TextBlock>
    </StackPanel>
</ContentDialog>
